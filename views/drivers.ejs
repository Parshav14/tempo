<!DOCTYPE html>
<html lang="en">
  
<head>
  <title><%= lang_data.Drivers %></title>
  <%- include('./partials/meta'); -%>
  <style>
    .loader-wrapper {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.7);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }
    .loader-wrapper.hidden {
      display: none;
    }
  </style>
</head>
<body>
  <!-- Loader starts-->
  <div class="loader-wrapper">
    <div class="loader-box">
      <div class="loader-19"></div>
    </div>
  </div>
  <!-- Loader ends-->

  <%- include('./partials/header_sidebar'); -%> 

  <div class="page-body">
    <div class="container-fluid">
      <div class="page-title">
        <div class="row">
          <div class="col-sm-6">
            <h3><%= lang_data.Users %></h3>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
              <li class="breadcrumb-item"><a href="/users/drivers"><%= lang_data.Drivers %></a></li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
      <div class="row">
        <!-- Scroll - vertical dynamic Starts-->
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header pb-0 d-flex justify-content-between">
              <h4><%= lang_data.Drivers %></h4>
              <a href="/users/add_drivers" class="btn btn-pill btn-primary btn-air-primary"><%= lang_data.New_Drivers %></a>
            </div>
            <div class="card-body">
              <div class="table-responsive theme-scrollbar">
                <table class="display" id="basic-12" aria-label="table">
                  <thead>
                    <tr>
                      <th id="abc" class="d-none"></th>
                      <th id="abc"><%= lang_data.Driver_Name %></th>
                      <th id="abc"><%= lang_data.EMail %></th>
                      <th id="abc"><%= lang_data.Phone_No %></th>
                      <th id="abc"><%= lang_data.Vehicle_License_Plate %></th>
                      <th id="abc"><%= lang_data.status %></th>
                      <th id="abc"><%= lang_data.Action %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% drivers_data.forEach((data) => { %>
                      <tr>
                        <td class="d-none"></td>
                        <td><%= data.first_name %> <%= data.last_name %></td>
                        <td>SkyCargo_Private_Data</td>
                        <td>SkyCargo_Private_Data</td>
                        <td><%= data.vehicle_plate %></td>
                        <td>
                          <% if ( data.active == "1") { %>
                            <span class="badge rounded-pill badge-success"><%= lang_data.Active %></span>
                          <% } else { %>
                            <span class="badge rounded-pill badge-danger"><%= lang_data.Inactive %></span>
                          <% } %>
                        </td>
                        <td> 
                          <ul class="action"> 
                            <li class="edit"> <a href="/users/edit_drivers/<%= data.id %>"><i class="icon-pencil-alt"></i></a></li>
                            <li class="delete"><a href="/users/drivers/delete/<%= data.id %>"><i class="icon-trash"></i></a></li>
                          </ul>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Scroll - vertical dynamic Ends-->
      </div>
    </div>
    <!-- Container-fluid Ends-->
  </div>
        
  <%- include('./partials/footer'); -%>
  <%- include('./partials/script'); -%>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM fully loaded');
        document.querySelector('.loader-wrapper').style.display = 'none';
    });

    window.addEventListener('error', function(e) {
        console.error('Global error caught:', e.error);
    });
    </script>
</body>
</html>